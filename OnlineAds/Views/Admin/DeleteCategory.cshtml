@model OnlineAds.Models.TblCategory

@{
    Layout = "../Shared/_Layout.cshtml";
    ViewData["Title"] = "Delete Category";
}

<h1>Delete Category</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>TblCategory</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CatName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CatName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CatStatus)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CatStatus)
        </dd>
    </dl>
    @if(ViewBag.Error == null)
    {
        <form asp-action="DeleteCategory">
            <input type="hidden" asp-for="CatId" />
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            <a asp-action="ViewCategory">Back to List</a>
        </form>
    }
    else
    {
        <h3>@ViewBag.Error</h3>
    }

</div>
