@model OnlineAds.Models.TblProduct

@{
    ViewData["Title"] = "updateAd";
}

<h1>Update Ad</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="updateAd">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ProId" />
            <div class="form-group">
                <label asp-for="ProName" class="control-label"></label>
                <input asp-for="ProName" class="form-control" />
                <span asp-validation-for="ProName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProImage" class="control-label"></label>
                <input type="file" name="imgfile" id="imgfile" class="form-control" required="required" />
            </div>
            <div class="form-group">
                <label asp-for="ProDes" class="control-label"></label>
                <input asp-for="ProDes" class="form-control" />
                <span asp-validation-for="ProDes" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProPrice" class="control-label"></label>
                <input asp-for="ProPrice" class="form-control" />
                <span asp-validation-for="ProPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

