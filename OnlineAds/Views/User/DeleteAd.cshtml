@model OnlineAds.Models.TblProduct

@{
    ViewData["Title"] = "Delete Ad";
}

<h1>Delete Ad</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ProName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ProName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ProFkCat)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ProFkCat)
        </dd>
    </dl>
    @if(ViewBag.Error == null)
    {
        <form asp-action="DeleteAd">
            <input type="hidden" asp-for="ProId" />
