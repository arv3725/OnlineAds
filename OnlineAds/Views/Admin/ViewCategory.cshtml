@using PagedList.Mvc
@using X.PagedList.Mvc
@using X.PagedList
@using System.Web
@model cloudscribe.Pagination.Models.PagedResult<OnlineAds.Models.TblCategory>

@{
    ViewData["Title"] = "View Category";
    ViewData["Controller"] = "Admin";
    ViewData["Action"] = "ViewCategory";
}



<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>View  Category</title>
    <link href="~/Content/paginition.css" rel="stylesheet" />
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
</head>
<body>
    <div class="container" style="height:1150px; ">

        <div class="row" style="margin-bottom:40px">
            @if (Model != null)
            {
                foreach (var item in Model.Data)
                {
                    <div class="col-lg-4 col-md-4" style="height:200px;margin-top:100px">
                        <img src="@Url.Content(@item.CatImage)" style=" height:100%;width:100% ;border-radius:50px 50px 50px 50px" alt="Image"/>
                        <h5 class="card-title">@item.CatName</h5>
                        @Html.ActionLink("Delete", "DeleteCategory", new { id = item.CatId }, new { @class = "btn btn-danger btn-sm" })    
                    </div>
                }
            }
        </div>
    </div>
        


    <partial name="_PaginationPartial" view-data="ViewData" model="Model" />
</body>
</html>

